block main
  .container.mt-lg-3.ovh
    .row.home-slider
      .col.home-slider__col
        .swiper-container.home-slider
          .home-slider__wrapper.swiper-wrapper
            .swiper-slide.home-slider__item(style="background-image: url(img/home-slider.jpg)")
